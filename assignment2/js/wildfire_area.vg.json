{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Yearly Burned Area by Land Cover",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/Spxctator/spxctator.github.io/refs/heads/main/.data/annual-burned-area-by-landcover.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "fold": [
          "Other land",
          "Croplands",
          "Forests",
          "Savannas",
          "Shrublands & grasslands"
        ],
        "as": ["Land Cover Type", "Burned Area"]
      },
      {"filter": {"param": "Region", "empty": false}},
      {
        "window": [
          {"op": "sum", "field": "Burned Area", "as": "Total Burned Area"}
        ],
        "frame": [null, null],
        "groupby": ["Year"]
      },
      {
        "calculate": "datum['Burned Area'] / datum['Total Burned Area'] * 100",
        "as": "Percentage"
      }
    ],
    "selection": {
      "Region": {
        "type": "single",
        "fields": ["Entity"],
        "bind": {
          "input": "select",
          "options": [
            "World",
            "Africa",
            "Europe",
            "Oceania",
            "North America",
            "South America"
          ],
          "name": "Region: "
        },
        "init": {"Entity": "World"}
      }
    },
    "mark": "area",
    "encoding": {
      "x": {"field": "Year", "type": "ordinal", "title": "Year"},
      "y": {
        "field": "Burned Area",
        "type": "quantitative",
        "title": "Burned Area (ha)"
      },
      "color": {
        "field": "Land Cover Type",
        "type": "nominal",
        "title": "Land Cover Type",
        "scale": {
          "domain": [
            "Other land",
            "Croplands",
            "Forests",
            "Savannas",
            "Shrublands & grasslands"
          ],
          "range": ["#1f77b4", "#6E5380", "#578145", "#9A5129", "#BC8E5A"]
        }
      },
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {
          "field": "Burned Area",
          "type": "quantitative",
          "title": "Burned Area (ha)",
          "format": ",.0f"
        },
        {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Percentage of Total (%)",
          "format": ".2f"
        }
      ]
    }
  }