{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Precipitation per Year (2020)",
    "width": 1000,
    "height": 500,
    "background": "white",
    "layer": [
      {
        "data": {"graticule": true},
        "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
      },
      {
        "data": {"sphere": true},
        "mark": {"type": "geoshape", "fill": "lightblue"}
      },
      {
        "projection": {"type": "equalEarth"},
        "data": {
          "url": "https://raw.githubusercontent.com/Spxctator/spxctator.github.io/main/.data/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.ISO_A3",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Spxctator/spxctator.github.io/main/.data/average-precipitation-per-year-2020.csv",
                "format": {"type": "csv"}
              },
              "key": "Code",
              "fields": ["Average precipitation in depth (mm per year)"]
            }
          },
          {
            "calculate": "toNumber(datum['Average precipitation in depth (mm per year)'])",
            "as": "Avg Precipitation (mm/year)"
          },
          {
            "calculate": "datum['Avg Precipitation (mm/year)'] == null ? 'No Data' : format(datum['Avg Precipitation (mm/year)'], '.1f')",
            "as": "Tooltip Avg Precipitation (mm/year)"
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Avg Precipitation (mm/year)",
            "type": "quantitative",
            "scale": {
              "domain": [0, 250, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3250, 3500],
              "range": [
                "#e5f5e0",
                "#c7e9c0",
                "#a1d99b",
                "#74c476",
                "#41ab5d",
                "#238b45",
                "#005a32"
              ],
              "type": "linear"
            },
            "title": ["Avg Precipitation", "(mm/year)"]
          },
          "tooltip": [
            {
              "field": "properties.NAME",
              "type": "nominal",
              "title": "Country/Region"
            },
            {
              "field": "Tooltip Avg Precipitation (mm/year)",
              "type": "nominal",
              "title": "Avg Precipitation (mm/year)"
            }
          ]
        }
      }
    ]
  }
  