{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Area Burnt per Land Area by Wildfires (2020)",
    "width": 1000,
    "height": 500,
    "background": "white",
    "layer": [
      {
        "data": {
          "graticule": true
        },
        "mark": {
          "type": "geoshape",
          "stroke": "lightgray",
          "strokeWidth": 0.5
        }
      },
      {
        "data": {
          "sphere": true
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightblue"
        }
      },
      {
        "projection": {"type": "equalEarth"},
        "data": {
          "url": "https://raw.githubusercontent.com/Spxctator/spxctator.github.io/main/.data/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.ISO_A3",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Spxctator/spxctator.github.io/main/.data/annual-area-burnt-by-wildfires-2020-n.csv",
                "format": {"type": "csv"}
              },
              "key": "Code",
              "fields": ["Normalized area burnt"]
            }
          },
          {
            "calculate": "toNumber(datum['Normalized area burnt']) + 0.001",
            "as": "Area Burnt Ha per km²"
          },
          {
            "calculate": "datum['Area Burnt Ha per km²'] - 0.001",
            "as": "Original Area Burnt Ha per km²"
          },
          {
            "calculate": "datum['Original Area Burnt Ha per km²'] == 0 ? 'No Data' : format(datum['Original Area Burnt Ha per km²'], '.2f')",
            "as": "Tooltip Area Burnt Ha per km²"
          }          
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Area Burnt Ha per km²",
            "type": "quantitative",
            "scale": {
              "domain": [0.001, 10, 4000],
              "range": ["#D3D3D3", "#feb24c", "#bd0026"],
              "type": "log"
            },
            "title": "Area Burnt (Ha/km²)"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country/Region"},
            {
              "field": "Tooltip Area Burnt Ha per km²",
              "type": "nominal",
              "title": "Area Burnt (Ha/km²)"
            }
          ]
        }
      }
    ]
  }
  